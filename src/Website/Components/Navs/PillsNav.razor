@inherits NavTypeBase

<ul class="nav nav-pills nav-fill small mb-3">
    @foreach (NavItem item in Items)
    {
        <li class="nav-item">
            @if (item.HasUrl)
            {
                <a class="nav-link" href="@item.URL" target="@item.GetURLTarget()">
                    @if (!string.IsNullOrEmpty(item.Icon))
                    {
                        <i class="@item.Icon me-2"></i> 
                    }
                    @item.Name
                </a>
            } else
            {
                <a class="nav-link @GetNavItemClass(item)" @onclick="() => ChangeNavItem(item)" href="javascript:void(0)">
                    @if (!string.IsNullOrEmpty(item.Icon))
                    {
                        <i class="@item.Icon me-2"></i> 
                    }
                    @item.Name
                </a>
            }
        </li>
    }
</ul>
@if (CurrentItem != null)
{
    <div class="tab-content">
        @CurrentItem.ChildContent
    </div>
}